<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    grid:columnCount="3"
    android:paddingBottom="@dimen/activity_vertical_marginMOD"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_marginMOD"
    grid:rowCount="13"
    android:screenOrientation="portrait"
    >

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/editNome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="@dimen/tab"
        android:ems="10"
        android:gravity="center"
        android:text="@string/g1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        grid:layout_column="0"
        grid:layout_row="0" />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/editNome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="@dimen/tab"
        android:ems="10"
        android:gravity="center"
        android:text="@string/g2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        grid:layout_column="1"
        grid:layout_row="0" />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/editNome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="@dimen/tab"
        android:ems="10"
        android:gravity="center"
        android:text="@string/g3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp"
        grid:layout_column="2"
        grid:layout_row="0" />

    <TextView
        android:id="@+id/Punti1"
        android:width="@dimen/tab"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/textBigi"
        grid:layout_column="0"
        grid:layout_gravity="center_horizontal|top"
        grid:layout_row="1" />

    <TextView
        android:id="@+id/Punti2"
        grid:layout_column="1"
        
        grid:layout_row="1"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/textBigi"
        android:width="@dimen/tab" />

    <TextView
        android:id="@+id/Punti3"
        grid:layout_column="2"
        
        grid:layout_row="1"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/textBigi"
        android:width="@dimen/tab" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBP1"
        grid:layout_column="0"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="3"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="@string/SuggMiniBP"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBP2"
        grid:layout_column="1"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="3"
        android:ems="10"
        android:hint="@string/SuggMiniBP"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBP3"
        grid:layout_column="2"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="3"
        android:ems="10"
        android:hint="@string/SuggMiniBP"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBI1"
        grid:layout_column="0"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="4"
        android:ems="10"
        android:hint="@string/SuggMiniBI"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBI2"
        grid:layout_column="1"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="4"
        android:ems="10"
        android:hint="@string/SuggMiniBI"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBI3"
        grid:layout_column="2"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="4"
        android:ems="10"
        android:hint="@string/SuggMiniBI"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBS1"
        android:width="@dimen/tab"
        android:ems="10"
        android:hint="@string/SuggMiniBS"
        android:inputType="number"
        android:maxLength="4"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_column="0"
        grid:layout_row="5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBS2"
        grid:layout_column="1"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="5"
        android:ems="10"
        android:hint="@string/SuggMiniBS"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editBS3"
        grid:layout_column="2"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="5"
        android:ems="10"
        android:hint="@string/SuggMiniBS"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editP1"
        android:width="@dimen/tab"
        app:backgroundTint="@color/textColorSecondary"
        android:ems="10"
        android:hint="@string/SuggP"
        android:inputType="number|numberSigned"
        android:maxLength="4"
        grid:layout_column="0"
        grid:layout_row="6" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editP2"
        android:width="@dimen/tab"
        app:backgroundTint="@color/textColorSecondary"
        android:ems="10"
        android:hint="@string/SuggP"
        android:inputType="number|numberSigned"
        android:maxLength="4"
        grid:layout_column="1"
        grid:layout_row="6" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editP3"
        android:width="@dimen/tab"
        app:backgroundTint="@color/textColorSecondary"
        android:ems="10"
        android:hint="@string/SuggP"
        android:inputType="number|numberSigned"
        android:maxLength="4"
        grid:layout_column="2"
        grid:layout_row="6" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPM1"
        grid:layout_column="0"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="7"
        android:ems="10"
        android:hint="@string/SuggPM"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPM2"
        grid:layout_column="1"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="7"
        android:ems="10"
        android:hint="@string/SuggPM"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPM3"
        grid:layout_column="2"
        app:backgroundTint="@color/textColorSecondary"
        grid:layout_row="7"
        android:ems="10"
        android:hint="@string/SuggPM"
        android:inputType="number"
        android:width="@dimen/tab"
        android:maxLength="4"/>

    <CheckBox
        android:id="@+id/chiusura1"
        grid:layout_column="0"
        android:textColor="@color/dialogText"
        grid:layout_row="8"
        android:text="@string/chius" />

    <CheckBox
        android:id="@+id/chiusura3"
        grid:layout_column="2"
        android:textColor="@color/dialogText"
        grid:layout_row="8"
        android:text="@string/chius" />

    <CheckBox
        android:id="@+id/chiusura2"
        grid:layout_column="1"
        android:textColor="@color/dialogText"
        grid:layout_row="8"
        android:text="@string/chius" />
    <CheckBox
        android:id="@+id/pozzetto1"
        grid:layout_column="0"
        android:textColor="@color/dialogText"
        grid:layout_row="9"
        android:text="@string/pozz" />

    <CheckBox
        android:id="@+id/pozzetto2"
        grid:layout_column="1"
        android:textColor="@color/dialogText"
        grid:layout_row="9"
        android:text="@string/pozz" />

    <CheckBox
        android:id="@+id/pozzetto3"
        grid:layout_column="2"
        android:textColor="@color/dialogText"
        grid:layout_row="9"
        android:text="@string/pozz" />

    <CheckBox
        android:id="@+id/rB1"
        android:onClick="setPozzetto1"
        android:text="@string/solo"
        android:textColor="@color/colorSecondary"
        app:buttonTint="@color/colorSecondary"
        grid:layout_column="0"
        grid:layout_row="2" />

    <CheckBox
        android:id="@+id/rB2"
        android:onClick="setPozzetto2"
        android:text="@string/solo"
        android:textColor="@color/colorSecondary"
        app:buttonTint="@color/colorSecondary"
        grid:layout_column="1"
        grid:layout_row="2" />

    <CheckBox
        android:id="@+id/rB3"
        android:onClick="setPozzetto3"
        android:text="@string/solo"
        android:textColor="@color/colorSecondary"
        app:buttonTint="@color/colorSecondary"
        grid:layout_column="2"
        grid:layout_row="2" />

</androidx.gridlayout.widget.GridLayout>
