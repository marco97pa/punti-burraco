<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_marginMOD"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_marginMOD"
            grid:columnCount="3"
            grid:rowCount="13">

            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/editNome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/tab"
                android:ems="10"
                android:gravity="center"
                android:text="@string/g1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                grid:layout_column="0"
                grid:layout_row="0" />

            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/editNome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/tab"
                android:ems="10"
                android:gravity="center"
                android:text="@string/g2"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                grid:layout_column="1"
                grid:layout_row="0" />

            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/editNome3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="@dimen/tab"
                android:ems="10"
                android:gravity="center"
                android:text="@string/g3"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="18sp"
                grid:layout_column="2"
                grid:layout_row="0" />

            <TextView
                android:id="@+id/Punti1"
                android:width="@dimen/tab"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/textBigi"
                grid:layout_column="0"
                grid:layout_gravity="center_horizontal|top"
                grid:layout_row="1" />

            <TextView
                android:id="@+id/Punti2"
                android:width="@dimen/tab"

                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/textBigi"
                grid:layout_column="1"
                grid:layout_row="1" />

            <TextView
                android:id="@+id/Punti3"
                android:width="@dimen/tab"

                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/textBigi"
                grid:layout_column="2"
                grid:layout_row="1" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBP1"
                android:width="@dimen/tab"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:hint="@string/SuggMiniBP"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="3" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBP2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBP"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="3" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBP3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBP"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="3" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBI1"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBI"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBI2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBI"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBI3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBI"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="4" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBS1"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBS"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="5" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBS2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBS"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="5" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editBS3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggMiniBS"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="5" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPB1"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPB"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="6" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPB2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPB"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="6" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPB3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPB"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="6" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editP1"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggP"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="7" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editP2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggP"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="7" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editP3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggP"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="7" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPM1"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPM"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="0"
                grid:layout_row="8" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPM2"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPM"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="1"
                grid:layout_row="8" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPM3"
                android:width="@dimen/tab"
                android:ems="10"
                android:hint="@string/SuggPM"
                android:inputType="number"
                android:maxLength="4"
                ads:backgroundTint="@color/textColorSecondary"
                grid:layout_column="2"
                grid:layout_row="8" />

            <CheckBox
                android:id="@+id/chiusura1"
                android:text="@string/chius"
                android:textColor="@color/dialogText"
                grid:layout_column="0"
                grid:layout_row="9" />

            <CheckBox
                android:id="@+id/chiusura3"
                android:text="@string/chius"
                android:textColor="@color/dialogText"
                grid:layout_column="2"
                grid:layout_row="9" />

            <CheckBox
                android:id="@+id/chiusura2"
                android:text="@string/chius"
                android:textColor="@color/dialogText"
                grid:layout_column="1"
                grid:layout_row="9" />

            <CheckBox
                android:id="@+id/pozzetto1"
                android:text="@string/pozz"
                android:textColor="@color/dialogText"
                grid:layout_column="0"
                grid:layout_row="10" />

            <CheckBox
                android:id="@+id/pozzetto2"
                android:text="@string/pozz"
                android:textColor="@color/dialogText"
                grid:layout_column="1"
                grid:layout_row="10" />

            <CheckBox
                android:id="@+id/pozzetto3"
                android:text="@string/pozz"
                android:textColor="@color/dialogText"
                grid:layout_column="2"
                grid:layout_row="10" />

            <CheckBox
                android:id="@+id/rB1"
                android:onClick="setPozzetto1"
                android:text="@string/solo"
                android:textColor="@color/colorSecondary"
                ads:buttonTint="@color/colorSecondary"
                grid:layout_column="0"
                grid:layout_row="2" />

            <CheckBox
                android:id="@+id/rB2"
                android:onClick="setPozzetto2"
                android:text="@string/solo"
                android:textColor="@color/colorSecondary"
                ads:buttonTint="@color/colorSecondary"
                grid:layout_column="1"
                grid:layout_row="2" />

            <CheckBox
                android:id="@+id/rB3"
                android:onClick="setPozzetto3"
                android:text="@string/solo"
                android:textColor="@color/colorSecondary"
                ads:buttonTint="@color/colorSecondary"
                grid:layout_column="2"
                grid:layout_row="2" />

        </androidx.gridlayout.widget.GridLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_3players_unit_id"/>

    </LinearLayout>
</ScrollView>